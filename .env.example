# ===========================================
# DockPulse Environment Variables
# ===========================================

# Application
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:3000

# Database (Platform)
DATABASE_URL=postgresql://dockpulse:dockpulse_dev@localhost:5432/dockpulse_platform

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-min-64-characters-long-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# S3 Storage (MinIO in development)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=dockpulse
S3_SECRET_KEY=dockpulse_dev
S3_BUCKET=dockpulse

# OpenRouter (AI)
OPENROUTER_API_KEY=sk-or-xxxxx

# SMS (SMSAPI)
SMS_API_KEY=
SMS_SENDER=DockPulse

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=DockPulse <noreply@dockpulse.com>

# Wildcard domain
DOMAIN=localhost

# Cloudflare (for wildcard SSL in production)
CLOUDFLARE_API_TOKEN=
