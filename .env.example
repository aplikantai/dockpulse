# ===========================================
# DockPulse Environment Variables
# ===========================================

# Application
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000

# Database (Platform)
DATABASE_URL=postgresql://dockpulse:dockpulse_dev@localhost:5432/dockpulse_platform

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-min-64-characters-long-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# S3 Storage (MinIO in development)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=dockpulse
S3_SECRET_KEY=dockpulse_dev
S3_BUCKET=dockpulse
S3_REGION=us-east-1
S3_PUBLIC_URL=http://localhost:9000

# Cloudflare R2 (Production) - uncomment when ready
# S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
# S3_ACCESS_KEY=your-r2-access-key
# S3_SECRET_KEY=your-r2-secret-key
# S3_BUCKET=dockpulse-production
# S3_PUBLIC_URL=https://cdn.dockpulse.com

# OpenRouter (Auto-Branding AI)
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# SMS (SMSAPI)
SMS_API_KEY=
SMS_SENDER=DockPulse

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=DockPulse <noreply@dockpulse.com>

# Wildcard domain
DOMAIN=localhost

# Cloudflare (for wildcard SSL in production)
CLOUDFLARE_API_TOKEN=
